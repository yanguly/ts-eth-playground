# ---------------------------
# Network & signer (used by make upgrade/deploy)
# ---------------------------
NETWORK_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# Optional convenience aliases
MY_ADDRESS=0xYOUR_ADDRESS
RECIPIENT=0xRECIPIENT_ADDRESS

# ---------------------------
# Proxy & implementations
# ---------------------------
TOKEN_ADDRESS=0xYourProxyAddressHere
TOKEN_IMPLEMENTATION_ADDRESS=0xActiveImplementationAddress
IMPL_NEW=0xOptionalNewImplAddress

# ---------------------------
# Validation (make validate)
# ---------------------------
NEW_IMPL_CONTRACT=YansTokenUUPSV4.sol:YansTokenUUPSV4
REFERENCE_CONTRACT=src/YansTokenUUPSV3.sol:YansTokenUUPSV3

# ---------------------------
# Deployment / initialization defaults
# ---------------------------
INITIAL_SUPPLY=1000000000000000000000000
TOKEN_SYMBOL=TOKENSYMBOL
TOKEN_NAME=TokenName
INITIAL_RECIPIENT=0xINITIAL_RECIPIENT_ADDRESS

# ---------------------------
# Roles
# ---------------------------
ADMIN_ADDRESS=0xADMIN
PAUSER_ADDRESS=0xPAUSER
MINTER_ADDRESS=0xMINTER
BURNER_ADDRESS=0xBURNER
GOVERNOR_ADDRESS=0xGOVERNOR
SUPPLY_CAP_WEI=0 # set to 0 to keep future mints uncapped

# ---------------------------
# Ownership / permit helper values
# ---------------------------
OWNER_ADDRESS=0xOWNER_ADDRESS
OWNER_PRIVATE_KEY=0xOWNER_PRIVATE_KEY
SPENDER_ADDRESS=0xSPENDER_ADDRESS
SPENDER_PRIVATE_KEY=0xSPENDER_PRIVATE_KEY

# ---------------------------
# Permit (EIP-2612)
# ---------------------------
PERMIT_SIGNATURE=0xPERMIT_SIGNATURE
PERMIT_VALUE=1000000000000000000
PERMIT_DEADLINE=0000000000 # unix timestamp (seconds)
